<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".appointment"
    android:id="@+id/appoinment_fragment"
    >

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="26dp"
        android:background="#ffffff">


        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Most searched specialities"
                    android:textSize="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="0dp"
                    android:textStyle="bold"
                    />

                <!-- First Row of Images -->
                <GridLayout
                    android:id="@+id/firstRowGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:columnCount="4"
                    android:rowCount="1"
                    app:layout_constraintTop_toBottomOf="@+id/textView2">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_columnWeight="1"
                        android:src="@drawable/pic6"
                        android:id="@+id/pic1"
                        android:layout_margin="4dp" />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_columnWeight="1"
                        android:src="@drawable/pic2"
                        android:id="@+id/pic2"
                        android:layout_margin="4dp" />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_columnWeight="1"
                        android:src="@drawable/pic3"
                        android:layout_margin="4dp" />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_columnWeight="1"
                        android:src="@drawable/pic4"
                        android:layout_margin="4dp" />
                </GridLayout>

                <!-- Second Row of TextViews -->
                <GridLayout
                    android:id="@+id/secondRowGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:columnCount="4"
                    android:rowCount="1"
                    app:layout_constraintTop_toBottomOf="@+id/firstRowGrid">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="General\n physician"
                        android:textAlignment="center"
                        android:layout_margin="4dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Skin &amp; \n Hair"
                        android:textAlignment="center"
                        android:layout_margin="4dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Woman's \n Health"
                        android:textAlignment="center"
                        android:layout_margin="4dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Child \n Specialist"
                        android:textAlignment="center"
                        android:layout_margin="4dp" />
                </GridLayout>

                <!-- Third Row of Images -->
                <GridLayout
                    android:id="@+id/thirdRowGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:columnCount="4"
                    android:rowCount="1"
                    app:layout_constraintTop_toBottomOf="@+id/secondRowGrid">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_columnWeight="1"
                        android:src="@drawable/pic5"
                        android:layout_margin="4dp" />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_columnWeight="1"
                        android:src="@drawable/pic1"
                        android:layout_margin="4dp" />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_columnWeight="1"
                        android:src="@drawable/pic7"
                        android:layout_margin="4dp" />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_columnWeight="1"
                        android:src="@drawable/pic8"
                        android:layout_margin="4dp" />
                </GridLayout>

                <!-- Fourth Row of TextViews -->
                <GridLayout
                    android:id="@+id/fourthRowGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:columnCount="4"
                    android:rowCount="1"
                    app:layout_constraintTop_toBottomOf="@+id/thirdRowGrid">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Mental \n wellness"
                        android:textAlignment="center"
                        android:layout_margin="4dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Dental \n care"
                        android:textAlignment="center"
                        android:layout_margin="4dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Bones &amp; \n Joints"
                        android:textAlignment="center"
                        android:layout_margin="4dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Ear,Nose \n &amp; Throat"
                        android:textAlignment="center"
                        android:layout_margin="4dp" />
                </GridLayout>

                <TextView
                    android:id="@+id/textView"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Catagories"
                    android:textSize="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/fourthRowGrid"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="0dp"
                    android:textStyle="bold"
                    />
                <GridLayout
                    android:id="@+id/ninthRowGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:columnCount="2"
                    android:rowCount="6"
                    app:layout_constraintTop_toBottomOf="@+id/textView">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_columnWeight="1"
                        android:src="@drawable/cat3"
                        android:id="@+id/pic3"
                        android:layout_margin="4dp" />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_columnWeight="1"
                        android:src="@drawable/cat2"
                        android:id="@+id/pic4"
                        android:layout_margin="4dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:textAlignment="center"
                        android:text="Bone &amp; joint\nfind doctors who\ntreat body aches"
                        android:layout_margin="4dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Sexual Health\nfind doctors for\nsolve your genital problem"
                        android:textAlignment="center"
                        android:layout_margin="4dp" />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_columnWeight="1"
                        android:src="@drawable/cat1"
                        android:layout_margin="4dp" />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_columnWeight="1"
                        android:src="@drawable/cat4"
                        android:layout_margin="4dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Womens's health:\nfind doctors for\nwomen's gynaecological\nissue..."
                        android:textAlignment="center"
                        android:layout_margin="4dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Skin &amp; hair \n find doctors for\n issues like acne\nskin..."
                        android:textAlignment="center"
                        android:layout_margin="4dp" />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_columnWeight="1"
                        android:src="@drawable/cat5"
                        android:layout_margin="4dp" />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="Chronic problem\nfind doctors for\ndiabetes,asthama..."
                        android:textAlignment="center"
                        android:layout_margin="4dp" />

                </GridLayout>


                <TextView
                    android:id="@+id/textView4"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" What patient's say"
                    android:textSize="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/ninthRowGrid"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="0dp"
                    android:textStyle="bold"
                    />

                <HorizontalScrollView
                    android:id="@+id/horizontalScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView4">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="360dp"
                            android:layout_height="200dp"
                            android:src="@drawable/per1"
                            android:layout_margin="4dp" />

                        <ImageView
                            android:layout_width="360dp"
                            android:layout_height="200dp"
                            android:layout_margin="4dp"
                            android:src="@drawable/per2" />

                        <ImageView
                            android:layout_width="360dp"
                            android:layout_height="200dp"
                            android:src="@drawable/per3"
                            android:layout_margin="4dp" />
                        <ImageView
                            android:layout_width="360dp"
                            android:layout_height="200dp"
                            android:src="@drawable/per4"
                            android:layout_margin="4dp" />
                        <ImageView
                            android:layout_width="360dp"
                            android:layout_height="200dp"
                            android:src="@drawable/per5"
                            android:layout_margin="4dp" />
                    </LinearLayout>
                </HorizontalScrollView>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>