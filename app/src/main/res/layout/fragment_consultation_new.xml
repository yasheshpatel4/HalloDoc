<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".consultation_new">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/search_health_problems_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search Health Problem / Symptoms"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/search_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search symptoms. Eg: Cold, cough, fever"
                android:drawableLeft="@drawable/ic_search"
                android:padding="10dp"
                android:background="@drawable/search_bar_background" />

            <TextView
                android:id="@+id/specialities_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose from Top Specialities"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="16dp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="2"
                android:columnCount="2"
                android:layout_marginTop="15dp"
                android:layout_gravity="center">

                <!-- First Row -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/mental_wellness_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/pic5" />
                    <TextView
                        android:id="@+id/mental_wellness_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mental Wellness" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/gynaecology_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/pic3" />
                    <TextView
                        android:id="@+id/gynaecology_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gynaecology" />
                </LinearLayout>

                <!-- Second Row -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/general_physician_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/pic1" />
                    <TextView
                        android:id="@+id/general_physician_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="General Physician" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/orthopedist_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/pic2" />
                    <TextView
                        android:id="@+id/orthopedist_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Orthopedist" />
                </LinearLayout>
            </GridLayout>

            <!-- Common Health Issues Section -->
            <TextView
                android:id="@+id/common_health_issues_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Common Health Issues"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="16dp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="3"
                android:columnCount="2"
                android:layout_marginTop="15dp"
                android:layout_gravity="center">

                <!-- First Row -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/stomach_pain_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/pic1" />
                    <TextView
                        android:id="@+id/stomach_pain_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stomach Pain" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/vertigo_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/pic1" />
                    <TextView
                        android:id="@+id/vertigo_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vertigo" />
                </LinearLayout>

                <!-- Second Row -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/acne_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/pic1" />
                    <TextView
                        android:id="@+id/acne_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Acne" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/pcos_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/pic1" />
                    <TextView
                        android:id="@+id/pcos_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PCOS" />
                </LinearLayout>

                <!-- Third Row -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/thyroid_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/pic1" />
                    <TextView
                        android:id="@+id/thyroid_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thyroid" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/headaches_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/pic1" />
                    <TextView
                        android:id="@+id/headaches_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Headaches" />
                </LinearLayout>
            </GridLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
