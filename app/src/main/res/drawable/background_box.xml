<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <solid android:color="#FFFFFF"/> <!-- White background -->

    <!-- Border properties -->
    <stroke
        android:width="1dp"
        android:color="#000000"/> <!-- Light grey border -->

    <!-- Corner radius -->
    <corners android:radius="8dp"/> <!-- Rounded corners -->

    <!-- Padding inside the view -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp"/>
</shape>
